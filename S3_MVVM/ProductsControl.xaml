<UserControl x:Class="S3_MVVM.ProductsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:S3_MVVM"
             xmlns:ViewModels="clr-namespace:S3_MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="OnLoaded">
    <UserControl.DataContext>
        <ViewModels:ProductsViewModel />
    </UserControl.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct}"
                 Margin="10,2,525,10" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="578,-1,0,0"
                   Text="{Binding SelectedProduct.Supplier.CompanyName}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="200"
                   Height="36" />
    </Grid>
</UserControl>